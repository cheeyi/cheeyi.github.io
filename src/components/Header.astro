---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h2><a href="/" class="logo">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/resume">Resume</HeaderLink>
		</div>
		<div class="header-actions">
			<button id="theme-toggle" aria-label="Toggle dark mode" title="Toggle dark mode">
				<svg class="sun-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
					<circle cx="10" cy="10" r="4" fill="currentColor"/>
					<path d="M10 0v4M10 16v4M20 10h-4M4 10H0M17.07 2.93l-2.83 2.83M5.76 14.24l-2.83 2.83M17.07 17.07l-2.83-2.83M5.76 5.76L2.93 2.93" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
				</svg>
				<svg class="moon-icon" width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
					<path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"/>
				</svg>
			</button>
			<div class="social-links">
				<a href="https://x.com/cheeyi" target="_blank">
					<span class="sr-only">Follow on Twitter</span>
					<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
						><path
							fill="currentColor"
							d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"
						></path></svg
					>
				</a>
				<a href="https://github.com/cheeyi" target="_blank">
					<span class="sr-only">Go to GitHub profile</span>
					<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
						><path
							fill="currentColor"
							d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
						></path></svg
					>
				</a>
			</div>
		</div>
	</nav>
</header>

<script>
	// Dark mode toggle functionality
	const themeToggle = document.getElementById('theme-toggle');
	const html = document.documentElement;

	// Set theme
	const setTheme = (theme: string) => {
		html.setAttribute('data-theme', theme);
		localStorage.setItem('theme', theme);
	};

	// Toggle theme on button click
	themeToggle?.addEventListener('click', () => {
		const currentTheme = html.getAttribute('data-theme');
		const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
		setTheme(newTheme);
	});
</script>

<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: rgba(255, 255, 255, 0.7);
		backdrop-filter: blur(12px);
		-webkit-backdrop-filter: blur(12px);
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		position: sticky;
		top: 0;
		z-index: 100;
		border-bottom: 1px solid rgba(var(--gray-light), 0.3);
	}

	:global([data-theme="dark"]) header {
		background: rgba(15, 20, 25, 0.9);
		border-bottom: 1px solid rgba(55, 65, 81, 0.4);
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.5);
	}

	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a.logo {
		text-decoration: none;
		background: var(--gradient-accent);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		font-weight: 700;
		background-size: 200% auto;
		animation: gradient-shift 3s ease infinite;
	}

	@keyframes gradient-shift {
		0%, 100% { background-position: 0% center; }
		50% { background-position: 100% center; }
	}

	h2 a.active {
		text-decoration: none;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1rem;
	}

	.internal-links {
		display: flex;
		gap: 0.5rem;
	}

	.header-actions {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	nav a {
		padding: 1em 0.5em;
		color: rgb(var(--black));
		border-bottom: 4px solid transparent;
		text-decoration: none;
		position: relative;
		transition: all 0.3s ease;
	}

	nav a:not(.logo)::after {
		content: '';
		position: absolute;
		width: 0;
		height: 3px;
		bottom: 0;
		left: 50%;
		transform: translateX(-50%);
		background: var(--gradient-primary);
		transition: width 0.3s ease;
	}

	nav a:not(.logo):hover::after {
		width: 80%;
	}

	nav a.active::after {
		width: 80%;
	}

	nav a.active {
		text-decoration: none;
		border-bottom-color: transparent;
	}

	/* Dark mode toggle button */
	#theme-toggle {
		background: none;
		border: 2px solid rgba(var(--gray), 0.3);
		border-radius: 50%;
		width: 40px;
		height: 40px;
		cursor: pointer;
		display: flex;
		align-items: center;
		justify-content: center;
		color: rgb(var(--black));
		transition: all 0.3s ease;
		padding: 0;
	}

	#theme-toggle:hover {
		border-color: var(--accent);
		transform: rotate(20deg) scale(1.1);
		box-shadow: 0 0 20px rgba(168, 85, 247, 0.3);
	}

	.sun-icon {
		display: block;
	}

	.moon-icon {
		display: none;
	}

	[data-theme="dark"] .sun-icon {
		display: none;
	}

	[data-theme="dark"] .moon-icon {
		display: block;
	}

	.social-links,
	.social-links a {
		display: flex;
		gap: 0.5rem;
	}

	.social-links a {
		transition: all 0.3s ease;
		border-bottom: none;
	}

	.social-links a::after {
		display: none;
	}

	.social-links a:hover {
		transform: translateY(-3px);
		color: var(--accent);
	}

	@media (max-width: 720px) {
		.social-links {
			display: none;
		}

		nav {
			gap: 0.5rem;
		}

		.internal-links {
			gap: 0;
		}

		nav a {
			padding: 1em 0.3em;
			font-size: 0.9em;
		}

		#theme-toggle {
			width: 36px;
			height: 36px;
		}
	}
</style>
