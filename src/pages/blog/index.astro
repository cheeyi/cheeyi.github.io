---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import WaveDivider from '../../components/WaveDivider.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child img {
				width: 100%;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
				will-change: transform;
			}
			ul li a {
				display: block;
				position: relative;
				border-left: 4px solid transparent;
				padding-left: 1rem;
				border-radius: 8px;
				transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
			}

			/* Category-based colored borders */
			ul li a[data-category="notes"] {
				border-left-color: var(--accent);
			}

			ul li a[data-category="random"] {
				border-left-color: var(--accent-secondary);
			}

			.category-tag {
				display: inline-block;
				font-size: 0.75rem;
				font-weight: 700;
				text-transform: uppercase;
				letter-spacing: 0.05em;
				padding: 0.25rem 0.75rem;
				border-radius: 20px;
				margin-bottom: 0.5rem;
				background: var(--gradient-primary);
				color: white;
			}

			.category-tag.random {
				background: var(--accent-secondary);
			}

			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover {
				transform: translateY(-8px) rotate(0.5deg);
				border-left-width: 6px;
				padding-left: calc(1rem - 2px);
			}

			ul li a:hover h4,
			ul li a:hover .date {
				color: var(--accent);
			}

			ul li a[data-category="random"]:hover h4,
			ul li a[data-category="random"]:hover .date {
				color: var(--accent-secondary);
			}

			ul a:hover img {
				box-shadow: var(--box-shadow-colored);
				transform: scale(1.02);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
				ul li a {
					border-left: none;
					border-top: 4px solid transparent;
					padding-left: 0;
					padding-top: 0.5rem;
				}
				ul li a[data-category="notes"] {
					border-top-color: var(--accent);
				}
				ul li a[data-category="random"] {
					border-top-color: var(--accent-secondary);
				}
				ul li a:hover {
					transform: translateY(-4px);
					border-left-width: 0;
					border-top-width: 6px;
					padding-left: 0;
					padding-top: calc(0.5rem - 2px);
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<h2>Publications & Writing</h2>

			<p>
				External articles and posts authored by yours truly.
			</p>

			<div class="publications-section">
				<div class="publication-card featured">
					<div class="publication-icon">üìö</div>
					<div class="publication-content">
						<h3 class="publication-title">
							<a href="https://punchthrough.com/android-ble-guide/" target="_blank" rel="noopener noreferrer">
								The Ultimate Guide to Android Bluetooth Low Energy
							</a>
						</h3>
						<p class="publication-description">
							My proudest work! An authoritative and comprehensive guide to Android BLE development, covering everything from basic concepts to advanced implementations. This resource has become a go-to reference for developers working with Bluetooth Low Energy on Android.
						</p>
						<div class="publication-meta">
							<span class="publication-badge">Technical Guide</span>
							<a href="https://punchthrough.com/android-ble-guide/" target="_blank" rel="noopener noreferrer" class="publication-link">punchthrough.com ‚Üí</a>
						</div>
					</div>
				</div>

				<div class="publication-card">
					<div class="publication-icon">‚úçÔ∏è</div>
					<div class="publication-content">
						<h3 class="publication-title">
							<a href="https://punchthrough.com/author/cong/" target="_blank" rel="noopener noreferrer">
								Company Blog Posts
							</a>
						</h3>
						<p class="publication-description">
							Regular technical articles and insights on Bluetooth development, mobile engineering best practices, and lessons learned from client projects.
						</p>
						<div class="publication-meta">
							<span class="publication-badge">Blog Series</span>
							<a href="https://punchthrough.com/author/cong/" target="_blank" rel="noopener noreferrer" class="publication-link">View all posts ‚Üí</a>
						</div>
					</div>
				</div>
			</div>

			<hr />
			<br />

			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`} data-category={post.data.categories}>
									{post.data.heroImage && (
										<Image width={720} height={360} src={post.data.heroImage} alt="" />
									)}
									<span class={`category-tag ${post.data.categories}`}>
										{post.data.categories}
									</span>
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<WaveDivider />
		<Footer />
	</body>
</html>
